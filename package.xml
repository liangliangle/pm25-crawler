<assembly>
  <!-- 项目打成Zip包的Id -->
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <!-- 项目一些说明的资源输出的目录，下面为当前目录 -->
    <fileSet>
      <directory></directory>
      <outputDirectory></outputDirectory>
      <!-- 指定那些文件需要复制进该目录下 -->
      <includes>
        <include>README.md</include>
        <include>config.properties</include>
        <include>start.sh</include>
        <include>phantomjs.exe</include>
        <include>phantomjs</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory></outputDirectory>
      <directory>target</directory>
      <includes>
        <include>pm25-crawler-1.0.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>  