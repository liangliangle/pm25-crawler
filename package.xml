<assembly>
  <!-- 项目打成Zip包的Id -->
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <!-- 项目一些说明的资源输出的目录，下面为当前目录 -->
    <fileSet>
      <outputDirectory>crawler</outputDirectory>
      <directory>target</directory>
      <includes>
        <include>pm25-crawler-1.0.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>README.md</source>
      <outputDirectory>crawler</outputDirectory>
    </file>
    <file>
      <source>config.properties</source>
      <fileMode>0771</fileMode>
      <outputDirectory>crawler</outputDirectory>
    </file>
    <file>
      <source>chromedriver.exe</source>
      <fileMode>0777</fileMode>
      <outputDirectory>crawler</outputDirectory>
    </file>
    <file>
      <source>kill.sh</source>
      <fileMode>0777</fileMode>
      <outputDirectory>crawler</outputDirectory>
    </file>
    <file>
      <source>start.sh</source>
      <fileMode>0777</fileMode>
      <outputDirectory>crawler</outputDirectory>
    </file>
  </files>

</assembly>  